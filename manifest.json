{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 3,
  "name": "Lexa",
  "version": "1.0.0",
  "description": "Learn a new language while browsing the web",
  "action": { "default_popup": "index.html" },
  "permissions": ["activeTab", "storage", "cookies"],
  "host_permissions": ["http://localhost", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  }
}
